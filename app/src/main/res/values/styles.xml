<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/color_primary</item>
        <item name="colorPrimaryDark">@color/color_primary_dark</item>
        <item name="colorAccent">@color/color_accent</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar"/>

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light"/>

    <!--User_info-->
    <style name="user_info">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="user_info.hint" parent="user_info">
        <item name="android:textSize">24sp</item>
    </style>

    <style name="user_info.value" parent="user_info">
        <item name="android:textSize">14sp</item>
    </style>

    <!--User_image-->
    <style name="user_image_left">
        <item name="android:layout_height">@dimen/size_small_24</item>
        <item name="android:layout_width">@dimen/size_small_24</item>
        <item name="android:layout_marginLeft">@dimen/size_small_24</item>
        <item name="android:layout_marginTop">@dimen/size_small_24</item>
    </style>

    <style name="user_image_right">
        <item name="android:layout_height">@dimen/size_small_24</item>
        <item name="android:layout_width">@dimen/size_small_24</item>
        <item name="android:layout_marginRight">@dimen/spacing_medium_32</item>
        <item name="android:layout_marginTop">@dimen/size_small_24</item>
    </style>

    <!--Edit_text-->
    <style name="edit_text">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textColorHint">@color/grey</item>
    </style>

    <!--LinearLayout-->
    <style name="user_edit_layout">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_height">@dimen/size_large_72</item>
        <item name="android:layout_marginLeft">@dimen/spacing_medium_32</item>
        <item name="android:layout_marginRight">@dimen/spacing_normal_16</item>
        <item name="android:gravity">bottom</item>
        <item name="android:orientation">horizontal</item>
    </style>

    <!--Dialog-->
    <style name="custom_dialog">
        <item name="android:fullDark">@android:color/transparent</item>
    </style>


</resources>
